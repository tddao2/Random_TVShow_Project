<% layout('layouts/boilerplate')%>
    <div class="jumbotron">
        <%- include('../partials/flash')%>
        <form action="/friend/<%= friend[0] %>?_method=PUT" method="POST">
            <h1 class="text-center">Edit Friend</h1>
            <% if (friend.length> 0) {%>
                <div class="form-group">
                    <input type="hidden" value="<%= friend[0] %>" name="id">
                </div>
                <div class="form-group">
                    <input type="text" id="firstname" value="<%= friend[1] %>" name="firstname" class="form-control"
                        placeholder="First Name" required autofocus>
                    <small id="emailHelp" class="form-text text-muted">We'll never share your information with anyone
                        else.</small>
                </div>
                <div class="form-group">
                    <input type="text" id="lastname" value="<%= friend[2] %>" name="lastname" class="form-control"
                        placeholder="Last Name" required autofocus>
                </div>

                <input class="btn btn-lg btn-success btn-block" value="Update" type="submit">
            <%}%>
        </form>
        <a href="/" class="btn btn-lg btn-secondary btn-block mt-3">Back</a>
    </div>